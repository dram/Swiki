| newPage |(request fieldsHasKey: 'name')	ifTrue: [		"Create New Page: default text scheme"		newPage _ page class new.		newPage			date: Date today;			time: Time now;			user: 'unknown';			name: (request fieldsKey: 'name');			settingsAt: 'parent' put: page id.		request security ifNotNil: [newPage			settingsAt: 'userId' put: request security id].		newPage			newParent: page;			initializeAlertsBook: book;			text: (Dictionary new				at: '1' put: (book formatPageTemplate: 'newText' request: request response: response shelf: shelf page: newPage);				at: '2' put: '';				yourself).		request settingsAt: 'parentPage' put: page.		book formatPageTemplate: ((request settingsAt: 'isOwner') ifTrue: ['editNewPageOwner'] ifFalse: [request security ifNil: ['editNewPagePublic'] ifNotNil: ['editNewPageUser']]) request: request response: response shelf: shelf page: newPage]	ifFalse: [book formatPageAddress: 'default' request: request response: response shelf: shelf page: page]