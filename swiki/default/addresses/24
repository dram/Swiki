| id user home setting |id _ request fieldsAsNumberKey: 'id' ifAbsent: [nil].user _ (shelf modulesAt: 'users') userAtId: id ifAbsent: [nil].user	ifNil: [response at: 'headerStatus' put: #notFound.		shelf formatShelfTemplate: 'notFound' request: request response: response]	ifNotNil: [		"Change the Home"		(request fieldsHasKey: 'home') ifTrue: [			home _ request fieldsKey: 'home'.			(home = '- none -')				ifTrue: [user settingsRemove: 'home']				ifFalse: [user settingsAt: 'home' put: home]].		"Change isOwner of each site"		shelf books do: [:book |			setting _ (book name), '-home'.			(request fieldsAsBooleanKey: setting)				ifTrue: [user settingsAt: setting put: true]				ifFalse: [user settingsRemove: setting]].		"Update file"		user save.		"Return to Editing User"		response			at: 'headerStatus' put: #tempMoved;			at: 'location' put: ((request referenceShelf: shelf address: 'admin/user?id='), user idAsString).		shelf formatShelfTemplate: 'location' request: request response: response]