(((shelf settingsAt: 'uploadServerPath') = '') or: [(shelf storage dir directoryExists: (shelf settingsAt: 'uploadPath')) not])	ifTrue: ["Only local is a choice"		'<input type="hidden" value="local" name="uploads">Served by Comanche']	ifFalse: ["Both global and local are choices"		'<select name="uploads"><option value="local">Served by Comanche<option value="global">Served by External Server</select>']