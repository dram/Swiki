| dateAndTime diff |dateAndTime _ (Time dateAndTimeNow).((page date) = (dateAndTime at: 1))	ifTrue: ["Just Time"		diff _ (dateAndTime at: 2) subtractTime: (page time).		(diff hours > 0)			ifTrue: [(diff hours = 1)				ifTrue: ['1 hour']				ifFalse: [diff hours asString, ' hours']]			ifFalse: [(diff minutes > 0)				ifTrue: [(diff minutes = 1)					ifTrue: ['1 minute']					ifFalse: [diff minutes asString, ' minutes']]				ifFalse: ['less than 1 minute']]]	ifFalse: ["Just Date"		diff _ (dateAndTime at: 1) subtractDate: page date.		(diff = 1)			ifTrue: ['1 day']			ifFalse: [diff asString, ' days']]