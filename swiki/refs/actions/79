"Check to make sure options have a file"| file bookUploads pageUploads |(file _ (request settingsAt: 'options') at: 'file' ifAbsent: [nil])	ifNil: ['<b>fLastMod function must have a <em>file</em> field.</b>']	ifNotNil: [		"Find the file"		bookUploads _ book modulesAt: 'uploads'.		pageUploads _ bookUploads directoryNamed: page id asString ifAbsent: [nil].		file _ (pageUploads fileRefsExists: file)			ifTrue: [pageUploads fileVersionsAt: file]			ifFalse: [bookUploads fileVersionsAt: file].		file			ifNil: ['<bfLastMod function cannot find the <em>file</em>.</b>']			ifNotNil: ["Print out when the file was last modified"				file _ file last.				String streamContents: [:stream | stream					nextPutAll: file modificationDateString;					nextPutAll: ' at ';					nextPutAll: file modificationTimeString]]]