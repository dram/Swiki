"Check to make sure options have a graph"| graph survey |(graph _ (request settingsAt: 'options') at: 'name' ifAbsent: [nil])	ifNil: ['<b>Graph function must have a <em>name</em> field.</b>']	ifNotNil: [(survey _ (book modulesAt: 'surveys') survey: graph ifAbsent: [nil])		ifNil: ['<b>Graph <em>', (TextFormatter encodeToXmlCrlf: graph), '</em> does not exist.</b>']		ifNotNil: [request settingsAt: 'survey' put: survey.			book formatBookAction: 'graph' request: request response: response shelf: shelf]]