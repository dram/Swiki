| page |(request fieldsHasKey: 'name') ifTrue: [page _ request fieldsAsNumberKey: 'name'.	((page isInteger) and: [(page > 0) and: [page <= (book pages size)]])		ifTrue: [page _ book pages at: page]		ifFalse: [page _ nil]].page	ifNil: [book formatBookAddress: 'default' request: request response: response shelf: shelf]	ifNotNil: [response at: 'headerStatus' put: #tempMoved.		response at: 'location' put: (request referenceShelf: shelf book: book page: page).		book formatPageTemplate: 'linkSuccess' request: request response: response shelf: shelf page: page]