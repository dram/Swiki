| filter form editCr editCrlf showCr showCrlf renderCr renderCrlf converter |(filter _ book formatPrivAddress: 'filterAdmin' request: request response: response shelf: shelf)	ifNil: ["Update Form"		form _ request fieldsKey: 'form'.		editCr _ TextFormatter crToCrlf: (request fieldsKey: 'edit').		editCrlf _ TextFormatter crlfToCr: (request fieldsKey: 'edit').		showCr _ TextFormatter crToCrlf: (request fieldsKey: 'show').		showCrlf _ TextFormatter crlfToCr: (request fieldsKey: 'show').		converter _ TextFormatter new.		1 to: 10 do: [:i | converter addMappingFrom: ('<?showText', i asString, '?>') to: ('<?renderText', i asString, '?>')].		renderCr _ converter format: showCr.		renderCrlf _ converter format: showCrlf.		(book hasPageTemplate: (form, '-show')) ifFalse: [			"Create new Templates"			book storage addBookFunction: 'templates' type: 'page' name: (form, '-edit') category: 'forms (user)'.			book storage addBookFunction: 'templates' type: 'page' name: (form, '-show') category: 'forms (user)'.			book storage addBookFunction: 'templates' type: 'page' name: (form, '-render') category: 'forms (user)'].				book pageTemplates at: (form, '-edit') put: editCrlf.		book pageTemplates at: (form, '-show') put: showCrlf.		book pageTemplates at: (form, '-render') put: renderCrlf.		book storage bookFunction: 'templates' type: 'page' name: (form, '-edit') content: editCr.		book storage bookFunction: 'templates' type: 'page' name: (form, '-show') content: showCr.		book storage bookFunction: 'templates' type: 'page' name: (form, '-render') content: renderCr.		response at: 'headerStatus' put: #tempMoved.		response at: 'location' put: (request referenceShelf: shelf book: book page: page address: 'forms').		book formatPageTemplate: 'saveTextFormSuccess' request: request response: response shelf: shelf page: page]	ifNotNil: [filter]