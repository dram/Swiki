| newPage |(request fieldsHasKey: 'name')	ifTrue: [		"Create New Page: default text scheme"		newPage _ page class new.		newPage			date: Date today;			time: Time now;			user: 'unknown';			name: (request fieldsKey: 'name');			text: (book formatPageTemplate: 'newText' request: request response: response shelf: shelf page: newPage).		request settingsAt: 'parentPage' put: page.		book formatPageTemplate: 'editNewPage' request: request response: response shelf: shelf page: newPage]	ifFalse: [book formatPageAddress: 'default' request: request response: response shelf: shelf page: page]