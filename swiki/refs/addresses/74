| newPage |(request fieldsHasKey: 'name')	ifTrue: [		"Create and Save Page"		newPage _ book addNewPage.		newPage			date: Date today;			time: Time now;			user: 'unknown';			nameUnique: (request fieldsKey: 'name') book: book;			text: (book formatPageTemplate: 'newText' request: request response: response shelf: shelf page: newPage).		(page settingsIncludes: 'scheme') ifTrue: [newPage			settingsAt: 'scheme' put: (page settingsAt: 'scheme')].		newPage			write.		book formatPageAddress: 'save' request: request response: response shelf: shelf page: newPage]	ifFalse: [book formatPageAddress: 'default' request: request response: response shelf: shelf page: page]