(book storage dir directoryExists: 'surveys')	ifTrue: [book modulesAt: 'surveys' put: (SwikiSurveyModule onDir: (book storage dir directoryNamed: 'surveys'))]	ifFalse: [		"Check to make sure this Swiki is not supposed to have surveys"		(book storage dir directoryExists: 'pages')			ifTrue: [book storage dir createDirectory: 'surveys'.				book modulesAt: 'surveys' put: (SwikiSurveyModule onDir: (book storage dir directoryNamed: 'surveys'))]			ifFalse: [book rawModulesRemove: 'surveys']]